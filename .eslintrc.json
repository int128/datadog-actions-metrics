{
  "plugins": ["jest", "@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
  },
  "env": {
    "node": true,
    "es6": true,
    "jest/globals": true
  },
  "ignorePatterns": [
    "dist/",
    "lib/",
    "node_modules/",
    "jest.config.js"
  ]
}
